#:kivy 1.0

<PitchDetector>:
    pitchLabel: pitchLabel
    size_hint: 1.0,1.0

    BoxLayout:
        size_hint: 1.0,1.0
        orientation: 'vertical'
        Label:
            size_hint: 1.0,1.0
            id: pitchLabel
            text: 'Pitch detected : ?'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint: 1.0,1.0
                on_press: root.startRecord()
                text: "Start"
            Button:
                size_hint: 1.0,1.0
                on_press: root.stopRecord()
                text: "Stop"
