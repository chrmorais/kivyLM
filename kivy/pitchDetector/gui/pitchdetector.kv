#:kivy 1.0

<PitchDetector>:
    pitchLabel: pitchLabel
    pitchLabelPython: pitchLabelPython
    toggleButton: toggleButton
    BoxLayout:
        padding: 5 
        spacing: 5 
        #size_hint: 1.0,1.0
        orientation: 'vertical'
        Label:
            #size_hint: 1.0,1.0
            id: pitchLabel
            text: 'Pitch detected(C) : ?'
        Label:
            #size_hint: 1.0,1.0
            id: pitchLabelPython
            text: 'Pitch detected (Python) : ?'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                #size_hint: 1.0,1.0
                on_press: root.startRecord()
                text: "Start"
            Button:
                #size_hint: 1.0,1.0
                on_press: root.stopRecord()
                text: "Stop"
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: toggleButton
                #size_hint: 1.0,1.0
                on_press: root.togglePython()
                text: "Disable Python"
